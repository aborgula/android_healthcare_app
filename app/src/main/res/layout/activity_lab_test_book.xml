<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblurr"
    android:foregroundTint="#000000"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:fontFamily="@font/madimi"
        android:text="24/7 Healthcare"
        android:textColor="@color/lightpurple"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/niramit"
        android:text="Please Fill All Details"
        android:textColor="#F8EAA5"
        android:textSize="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText


        android:id="@+id/fullname"
        android:layout_width="289dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="6dp"
        android:fontFamily="@font/niramit"
        android:hint="Full name"
        android:paddingStart="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText

        android:id="@+id/address"
        android:layout_width="289dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/home"
        android:drawablePadding="6dp"
        android:fontFamily="@font/niramit"
        android:hint="Address"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname" />


    <EditText


        android:id="@+id/pincode"
        android:layout_width="289dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/login"
        android:drawablePadding="6dp"
        android:fontFamily="@font/niramit"
        android:hint="PinCode"
        android:paddingStart="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <EditText


        android:id="@+id/contact"
        android:layout_width="289dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"

        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="7dp"
        android:fontFamily="@font/niramit"
        android:hint="Contact Number"
        android:paddingStart="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pincode" />

    <Button
        android:id="@+id/book"
        android:layout_width="289dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/buttondarkpurple"
        android:fontFamily="@font/niramit"
        android:text="book"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/radius"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        app:layout_constraintVertical_bias="0.357" />


</androidx.constraintlayout.widget.ConstraintLayout>